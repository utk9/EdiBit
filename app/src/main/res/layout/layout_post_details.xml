<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#b7b7b7"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/description_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from description_user"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp" />
        <EditText
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            android:textColor="#b7b7b7"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created at "
                android:textSize="16dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="1dp"/>
            <EditText
                android:id="@+id/description_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="#b7b7b7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $"
                android:padding="1dp"
                android:textSize="16dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/description_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="#b7b7b7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: "
                android:padding="1dp"
                android:textSize="16dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="30dp"/>
            <EditText
                android:id="@+id/description_contact"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="#b7b7b7"/>
        </LinearLayout>
        <EditText
            android:id="@+id/description_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags: description_tags"
            android:textSize="16dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/post_button"/>
    </LinearLayout>
</ScrollView>


